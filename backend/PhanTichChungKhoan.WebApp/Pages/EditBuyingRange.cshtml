@page
@model PhanTichChungKhoan.WebApp.Pages.EditBuyingRangeModel
@{
    ViewData["Title"] = "Edit buying range";
}

<h4>Edit buying range</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BuyingRange.Exchange" />
            <div class="form-group">
                <label asp-for="BuyingRange.Symbol" class="control-label"></label>
                <input asp-for="BuyingRange.Symbol" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="BuyingRange.BuyPriceFrom" class="control-label"></label>
                <input asp-for="BuyingRange.BuyPriceFrom" class="form-control" />
                <span asp-validation-for="BuyingRange.BuyPriceFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BuyingRange.BuyPriceTo" class="control-label"></label>
                <input asp-for="BuyingRange.BuyPriceTo" class="form-control" />
                <span asp-validation-for="BuyingRange.BuyPriceTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="text-center">
    <a asp-page="Portfolio">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
